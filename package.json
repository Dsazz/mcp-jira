    "marked": "^9.1.5",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.6.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jira-client": "^7.1.6",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.11",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.1",
    "eventsource": "^3.0.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
