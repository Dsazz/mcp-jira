{
  "name": "@dsazz/jira-mcp",
  "version": "1.1.0",
  "description": "JIRA MCP Server for Cursor",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "inspect": "bun run inspector.js",
    "cleanup-ports": "kill -9 $(lsof -ti:5175,3002) 2>/dev/null || true && echo 'Ports 5175 and 3002 have been released'",
    "lint": "bun biome check .",
    "format": "bun biome format --write ."
  },
  "keywords": ["mcp", "jira", "cursor"],
  "author": "Stanislav Stepanenko",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "jira-client": "^8.2.2",
    "marked": "^9.1.5",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@modelcontextprotocol/inspector": "^0.6.0",
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/jira-client": "^7.1.6",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.3.3"
  },
  "private": true
}
